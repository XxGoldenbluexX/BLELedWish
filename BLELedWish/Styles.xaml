<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Colors -->
    <Color x:Key="LightRed" R="255" G="200" B="200" A="255"/>
    <!-- Brush -->
    <SolidColorBrush x:Key="LightRedBrush" Color="{StaticResource LightRed}"/>
    <!-- Inherited -->
    <Style TargetType="Button">
        <Setter Property="Padding" Value="5"/>
    </Style>
    <!-- Named-->
    <Style TargetType="Button" x:Key="DeleteButton">
        <Setter Property="Background" Value="{StaticResource LightRedBrush}"/>
    </Style>
</ResourceDictionary>