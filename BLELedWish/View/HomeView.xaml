<ContentControl x:Class="BLELedWish.View.HomeView"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:local="clr-namespace:BLELedWish.View">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Content="Gestion des messages LED"/>
        <ListView Grid.Row="1" ItemsSource="{Binding Messages}" HorizontalContentAlignment="Stretch">
        </ListView>
    </Grid>
</ContentControl>
